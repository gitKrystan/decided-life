<% header 'Sign up' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <legend>Account Information</legend>
  <div class="field">
    <%= f.label :name, 'Username' %>
    <div class="dec-input-wrapper">
      <%= f.text_field :name, autofocus: true, placeholder: "Username" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %>
    <div class="dec-input-wrapper">
      <%= f.email_field :email, placeholder: "you@example.com" %>
    </div>
  </div>

  <legend>Password</legend>
  <div class="field">
    <%= f.label :password %>
    <div class="dec-input-wrapper">
      <%= f.password_field :password, autocomplete: "off", placeholder: "top secret password" %>
      <% if @minimum_password_length %>
      <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirm password' %>
    <div class="dec-input-wrapper">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
