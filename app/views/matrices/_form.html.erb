<%= render 'layouts/errors', object: @matrix %>

<%= form_for(@matrix) do |f| %>
  <div class="field">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.submit id: 'save-matrix', class: "btn btn-success" %>
  </div>
<% end %>
