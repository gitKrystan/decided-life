<% header @matrix.name %>

<%= render 'matrix', view: 'show' %>

<% if current_matrix_owner? %>
  <%= link_to edit_matrix_path(@matrix), id: 'edit-matrix',
                                         class: 'btn btn-small btn-warning' do %>
    Edit <%= @matrix.name %>
  <% end %>
<% else %>
  <p>
    Read only. Log in as the matrix owner to edit.
  </p>
<% end %>
