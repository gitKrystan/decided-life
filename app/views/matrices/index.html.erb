<div class="jumbotron">
  <h1>Life is full of tough decisions.</h1>
  <p>
    Decision matrices allow people and teams to choose wisely based on priorities and values.
  </p>
</div>

<%= link_to 'New Matrix', new_matrix_path, id: 'new-matrix', class: 'btn btn-primary' %>

<% if @matrices.any? %>
<ul class="nav nav-pills nav-stacked">
  <% @matrices.each do |matrix| %>
    <% if matrix_owner?(matrix) %>
      <li><%= link_to matrix.name, edit_matrix_path(matrix) %></li>
    <% else %>
      <li><%= link_to matrix.name, matrix %></li>
    <% end %>
  <% end %>
</ul>
<% else %>
  <h1>Add a new Decision Matrix</h1>
<% end %>
