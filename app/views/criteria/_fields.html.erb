<div class="col-sm-8">
  <div class="field">
    <%= f.label :name, 'Criterium Name' %>
    <div class="dec-input-wrapper">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :importance %>
    <div class="dec-input-wrapper">
      <%= f.select :importance, importance_options(f), class: "form-control" %>
    </div>
  </div>
</div>
<div class="col-sm-4">
  <a class="dec-js-toggle dec-bin-toggle">customize criterium scores</a>
  <div class="collapse">
    <%= f.fields_for :bins, score_bins(f) do |bin| %>
      <%= render 'bins/fields', f: bin %>
    <% end %>
  </div>
</div>
