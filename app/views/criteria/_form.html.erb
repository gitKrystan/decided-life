
<%= form_for [@matrix, @criterium] do |f| %>
  <%= render 'layouts/errors', object: @criterium %>

  <div class="field">
    <%= f.label :name, class: "control-label" %>
    <div class="dec-input-wrapper">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :importance, class: "control-label" %>
    <div class="dec-input-wrapper">
      <%= f.number_field :importance, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit id: 'save-criterium', class: "btn btn-success" %>
  </div>
<% end %>
