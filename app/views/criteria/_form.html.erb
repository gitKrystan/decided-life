<%= render 'layouts/errors', object: @criterium %>

<%= form_for [@matrix, @criterium] do |f| %>
  <div class="field">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :weight, class: "control-label" %>
    <%= f.number_field :weight, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.submit id: 'save-criterium', class: "btn btn-success" %>
  </div>
<% end %>
