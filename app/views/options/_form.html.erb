
<%= form_for [@matrix, @option] do |f| %>
  <%= render 'layouts/errors', object: @option %>

  <div class="field">
    <%= f.label :name, class: "control-label" %>
    <div class="dec-input-wrapper">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit id: 'save-option', class: "btn btn-success" %>
  </div>
<% end %>
